        <Button
            android:id="@+id/btn_circle3"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Circle 3" />

        <Button
            android:id="@+id/btn_swirl"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Swirl" />

        <Button
            android:id="@+id/btn_bloom"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Bloom" />
        <Button
            android:id="@+id/btn_ledbyled"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Led by Led" />

        <Button
            android:id="@+id/btn_heartbeat_red"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_columnWeight="1"
            android:backgroundTint="#FF0000"
            android:text="Red Heart Beat" />

        <Button
            android:id="@+id/btn_heartbeat_green"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#4CAF50"
            android:text="Green Heart Beat" />

        <Button
            android:id="@+id/btn_heartbeat_blue"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_columnWeight="1"
            android:backgroundTint="#2196F3"
            android:text="Blue Heart Beat" />

        <Button
            android:id="@+id/btn_heartbeat1"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Heart Beat 1" />

        <Button
            android:id="@+id/btn_heartbeat2"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Heart Beat 2" />

        <Button
            android:id="@+id/btn_heartbeat3"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Heart Beat 3" />



        <Button
            android:id="@+id/btn_tail_flash"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Tail Flash" />

        <Button
            android:id="@+id/btn_moving_rainbow"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Moving Rainbow" />

        <Button
            android:id="@+id/btn_fire_tail"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Fire Tail" />

        <Button
            android:id="@+id/btn_following_light"
            style="@style/CustomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Following Light" />


    </GridLayout>
</LinearLayout>
</ScrollView>
